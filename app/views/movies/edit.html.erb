<% content_for :title, "Editing movie" %>

<h1 style="font-family: Arial, sans-serif; color: #4CAF50;">Editing movie</h1>

<div style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1);">
  <%= render "form", movie: @movie %>
</div>

<br>

<div style="margin-top: 20px;">
  <%= link_to "Show this movie", @movie, style: "text-decoration: none; background-color: #4CAF50; color: white; padding: 10px 20px; border-radius: 5px; margin-right: 10px;" %>
  <%= link_to "Back to movies", movies_path, style: "text-decoration: none; background-color: #2196F3; color: white; padding: 10px 20px; border-radius: 5px;" %>
</div>
