<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th class="<%= 'asc' if session[:direction] == 'asc' && session[:sort] == 'title' %> <%= 'desc' if session[:direction] == 'desc' && session[:sort] == 'title' %>">
        <%= link_to "Title", movies_path(sort: "title", direction: toggle_sort_direction("title")) %>
        <% if session[:sort] == "title" %>
          <%= session[:direction] == "asc" ? "↑" : "↓" %>
        <% end %>
      </th>      
      <th class="<%= 'asc' if session[:direction] == 'asc' && session[:sort] == 'rating' %> <%= 'desc' if session[:direction] == 'desc' && session[:sort] == 'rating' %>">
        <%= link_to "Rating", movies_path(sort: "rating", direction: toggle_sort_direction("rating")) %>
        <% if session[:sort] == "rating" %>
          <%= session[:direction] == "asc" ? "↑" : "↓" %>
        <% end %>
      </th>
      <th class="<%= 'asc' if session[:direction] == 'asc' && session[:sort] == 'release_date' %> <%= 'desc' if session[:direction] == 'desc' && session[:sort] == 'release_date' %>">
        <%= link_to "Release Date", movies_path(sort: "release_date", direction: toggle_sort_direction("release_date")) %>
        <% if session[:sort] == "release_date" %>
          <%= session[:direction] == "asc" ? "↑" : "↓" %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to "Show", movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New movie", new_movie_path %>
